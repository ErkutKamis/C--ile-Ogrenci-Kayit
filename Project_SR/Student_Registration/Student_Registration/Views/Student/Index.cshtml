@model IEnumerable<Student_Registration.Models.Students>

@{
    ViewBag.Title = "Index";
}

<h2>Öğrenci Listesi</h2>
<br />
<p>
    <a class="btn btn-primary" href="@Url.Action("Create", "Student")">Yeni Kayıt</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.İsim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyisim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.İsim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soyisim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.Id }, new {@class="btn btn-warning"}) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
